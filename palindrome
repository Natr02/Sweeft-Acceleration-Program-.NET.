using System;

class Program
{
    static void Main()
    {
        Console.WriteLine("Enter the text to check for palindrome:");
        string inputText = Console.ReadLine();
        
        bool isPalindrome = sPalindrome(inputText);
        
        if (isPalindrome)
        {
            Console.WriteLine("The text is a palindrome.");
        }
        else
        {
            Console.WriteLine("The text is not a palindrome.");
        }
    }

    static bool sPalindrome(string text)
    {
        text = text.Replace(" ", "").ToLower();
        int length = text.Length;

        for (int i = 0; i < length / 2; i++)
        {
            if (text[i] != text[length - i - 1])
            {
                return false;
            }
        }

        return true;
    }
}
